<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape>
            <solid android:color="#48c9b0" /> <!-- Mint Green -->
            <corners android:radius="8dp" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ff6f61" /> <!-- Vibrant Coral -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
